# Database connection
DATABASE_URL=postgres://postgres:postgres@localhost:5432/risk_radar
PORT=8080
NODE_ENV=development

# Logging settings
LOG_LEVEL=info
LOG_DB_QUERIES=false

# Pagination settings
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Log retention settings (in days)
LOG_RETENTION_DAYS=365

# WebSocket settings
WEBSOCKET_ENABLED=true

# Kafka settings
KAFKA_BROKERS=
KAFKA_CLIENT_ID=audit-log-service
KAFKA_GROUP_ID=audit-log-service-consumer
KAFKA_TOPIC=audit_logs
KAFKA_CONNECT_MAX_RETRIES=12
KAFKA_CONNECT_RETRY_INITIAL_DELAY_MS=1000
KAFKA_CONNECT_RETRY_MAX_DELAY_MS=15000
KAFKA_CONNECT_RETRY_BACKOFF_MULTIPLIER=1.8
