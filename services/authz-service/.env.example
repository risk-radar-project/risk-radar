# Database configuration
DATABASE_URL=postgres://username:password@localhost:5432/authz_db?sslmode=disable

# HTTP server configuration
HTTP_PORT=8080

# Other microservices configuration
AUDIT_LOG_URL=http://localhost:8081

# Audit Kafka integration (optional)
AUDIT_KAFKA_ENABLED=true
AUDIT_KAFKA_BROKERS=kafka:9092
AUDIT_KAFKA_TOPIC=audit_logs
AUDIT_KAFKA_CLIENT_ID=authz-service
AUDIT_KAFKA_ACKS=-1
AUDIT_KAFKA_CONNECTION_TIMEOUT_MS=3000
AUDIT_KAFKA_SEND_TIMEOUT_MS=5000
AUDIT_KAFKA_RETRIES=3