{
    "name": "notification-service",
    "version": "1.0.0",
    "description": "Risk Radar notification delivery microservice",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "lint": "eslint src/**/*.ts tests/**/*.ts *.ts *.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint:fix": "eslint src/**/*.ts tests/**/*.ts *.ts *.js --fix",
        "migrate": "ts-node src/database/migrate.ts",
        "seed": "ts-node src/database/seed/index.ts"
    },
    "dependencies": {
        "axios": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "joi": "^17.12.0",
        "kafkajs": "^2.2.4",
        "nodemailer": "^6.9.14",
        "pg": "^8.12.0",
        "uuid": "^9.0.1",
        "winston": "^3.13.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.11.30",
        "@types/nodemailer": "^6.4.15",
        "@types/pg": "^8.11.6",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.57.0",
        "jest": "^30.2.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
